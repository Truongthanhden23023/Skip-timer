-- Assuming there's a global timer for the match
local matchTimer = 300  -- For example, 5 minutes per match (300 seconds)

-- Function to start the match timer (countdown)
function startMatchTimer()
    while matchTimer > 0 do
        print("Match time left: " .. matchTimer)
        matchTimer = matchTimer - 1
        os.execute("sleep 1")  -- Simulate 1 second passing
    end
    print("Match over!")
end

-- Function to skip the entire match timer
function skipMatchTimer()
    matchTimer = 0
    print("Match timer skipped! The match is over immediately.")
end

-- Example Usage
startMatchTimer()  -- Starts the match timer countdown
-- To skip the timer and end the match immediately:
skipMatchTimer()   -- Immediately ends the match
